<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/profile_image"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            />
        <LinearLayout
            android:id="@+id/name_container"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:weightSum="6">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:scaleType="fitStart"
                android:src="@drawable/profile_icon"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.2"
                android:background="@null"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColorHint="@color/grey"
                android:hint="Full Name"
                android:textColor="@color/descriptext_zinc"
                android:fontFamily="@font/helvetica_neue_light"
                android:textSize="15sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/email_conatiner"
            android:background="@color/grey"/>
        <LinearLayout
            android:id="@+id/email_conatiner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:weightSum="6">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:scaleType="fitStart"
                android:src="@drawable/mail"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.2"
                android:background="@null"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColorHint="@color/grey"
                android:hint="example@email,com"
                android:textColor="@color/descriptext_zinc"
                android:fontFamily="@font/helvetica_neue_light"
                android:textSize="15sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/email_conatiner"
            android:background="@color/grey"/>
        <LinearLayout
            android:id="@+id/pass_conatiner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/email_conatiner"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:weightSum="6">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:scaleType="fitStart"
                android:src="@drawable/lock"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.2"
                android:background="@null"
                android:textColorHint="@color/grey"
                android:hint="*******"
                android:imeOptions="actionNext"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/descriptext_zinc"
                android:fontFamily="@font/helvetica_neue_light"
                android:textSize="15sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/pass_conatiner"
            android:background="@color/grey"/>
        <LinearLayout
            android:id="@+id/dob_conatiner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/email_conatiner"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:weightSum="6">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:scaleType="fitStart"
                android:src="@drawable/calendar"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.2"
                android:background="@null"
                android:textColorHint="@color/grey"
                android:hint="DD/MM/YYYY"
                android:imeOptions="actionNext"
                android:gravity="center_vertical"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/descriptext_zinc"
                android:fontFamily="@font/helvetica_neue_light"
                android:textSize="15sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/pass_conatiner"
            android:background="@color/grey"/>
        <LinearLayout
            android:id="@+id/gen_conatiner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/email_conatiner"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:weightSum="6">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:scaleType="fitStart"
                android:src="@drawable/profile_icon"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.2"
                android:background="@null"
                android:textColorHint="@color/grey"
                android:hint="Gender"
                android:imeOptions="actionNext"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/descriptext_zinc"
                android:fontFamily="@font/helvetica_neue_light"
                android:textSize="15sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/pass_conatiner"
            android:background="@color/grey"/>
        <LinearLayout
            android:id="@+id/country_conatiner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/email_conatiner"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:weightSum="6">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:scaleType="fitStart"
                android:src="@drawable/countryicon_unselected"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.2"
                android:background="@null"
                android:textColorHint="@color/grey"
                android:hint="Country"
                android:imeOptions="actionNext"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/descriptext_zinc"
                android:fontFamily="@font/helvetica_neue_light"
                android:textSize="15sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/pass_conatiner"
            android:background="@color/grey"/>
        <LinearLayout
            android:id="@+id/state_conatiner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/email_conatiner"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:weightSum="6">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:scaleType="fitStart"
                android:src="@drawable/user_state"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.2"
                android:background="@null"
                android:textColorHint="@color/grey"
                android:hint="Current Stage"
                android:imeOptions="actionNext"
                android:gravity="center_vertical"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/descriptext_zinc"
                android:fontFamily="@font/helvetica_neue_light"
                android:textSize="15sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/pass_conatiner"
            android:background="@color/grey"/>
        <ImageButton
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/regbtn2"
            android:background="@null"
            android:layout_below="@+id/forgetpass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Login."
            android:layout_below="@+id/btn_login"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/helvetica_neue_medium"
            android:textSize="15sp"
            android:textColor="#1249FC"/>
    </LinearLayout>

</ScrollView>

</FrameLayout>