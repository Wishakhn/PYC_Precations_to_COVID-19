<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.HelpFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="10dp"
        android:paddingTop="30dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/applogo"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ASK QUESTION"
            android:fontFamily="@font/iowan_old_style_roman"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:textColor="@color/titletext_black"
            android:textSize="20sp"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="5dp"
            android:weightSum="5"
            android:background="@drawable/field_background">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="E-mail:"
                android:fontFamily="@font/arial"
                android:textSize="15sp"
                android:textColor="@color/titletext_black"/>
            <EditText
                android:id="@+id/sendermail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:background="@null"
                android:layout_weight="4"
                android:hint="example@email.com"
                android:textSize="15sp"
                android:textColor="@color/descriptext_zinc"
                android:fontFamily="@font/arial"
                android:textColorHint="@color/descriptext_grey"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="5dp"
            android:layout_marginTop="30dp"
            android:weightSum="4.7"
            android:gravity="center"
            android:background="@drawable/field_background">

            <EditText
                android:id="@+id/descripmailEdit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:imeOptions="actionNext"
                android:background="@null"
                android:layout_weight="4.5"
                android:gravity="top"
                android:hint="Your message here  . . . . "
                android:textSize="15sp"
                android:textColor="@color/descriptext_zinc"
                android:fontFamily="@font/arial"
                android:textColorHint="@color/descriptext_grey"
                />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/sendbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logbtn"
            android:layout_centerInParent="true"
            android:background="@null"
            android:elevation="6dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/reg_btn"
            app:cardBackgroundColor="@color/btn_purple"
            app:cardCornerRadius="3dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/helvetica_neue_light"
                android:padding="10dp"
                android:text="@string/send"
                android:textColor="@color/titletext_white"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView></FrameLayout>