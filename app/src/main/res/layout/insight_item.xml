    android:layout_width="290dp"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:paddingStart="7dp"
    android:paddingBottom="20dp"
    android:paddingEnd="20dp"
    android:background="@drawable/card_purple_bacground">

    <TextView
        android:id="@+id/institle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="15sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/titletext_white"
        android:fontFamily="@font/iowan_old_style_roman"
        android:text="Title:"
        />
    <TextView
        android:id="@+id/insdescrip"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingStart="5dp"
        android:textColor="@color/titletext_white"
        android:fontFamily="@font/arial"
        android:text="hello hello \n Daily news about survivor
s of COVID-19 "/>
</LinearLayout>