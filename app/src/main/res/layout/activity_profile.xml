<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".profileActivity">
    <include layout="@layout/custom_toolbar"
        android:layout_weight="0.9"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="20dp"
            android:gravity="center_horizontal"
            android:paddingTop="30dp"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/profile_image"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:weightSum="6">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:scaleType="fitStart"
                    android:src="@drawable/profile_icon"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.2"
                    android:background="@null"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textColorHint="@color/grey"
                    android:hint="Full Name"
                    android:textColor="@color/descriptext_zinc"
                    android:fontFamily="@font/helvetica_neue_light"
                    android:textSize="15sp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/email_conatiner"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:weightSum="6">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:scaleType="fitStart"
                    android:src="@drawable/mail"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.2"
                    android:background="@null"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textColorHint="@color/grey"
                    android:hint="example@email,com"
                    android:textColor="@color/descriptext_zinc"
                    android:fontFamily="@font/helvetica_neue_light"
                    android:textSize="15sp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/email_conatiner"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email_conatiner"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:weightSum="6">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:scaleType="fitStart"
                    android:src="@drawable/lock"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.2"
                    android:background="@null"
                    android:textColorHint="@color/grey"
                    android:hint="*******"
                    android:imeOptions="actionNext"
                    android:gravity="center_vertical"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/descriptext_zinc"
                    android:fontFamily="@font/helvetica_neue_light"
                    android:textSize="15sp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/pass_conatiner"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email_conatiner"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:weightSum="6">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:scaleType="fitStart"
                    android:src="@drawable/calendar"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.2"
                    android:background="@null"
                    android:textColorHint="@color/grey"
                    android:hint="DD/MM/YYYY"
                    android:imeOptions="actionNext"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/descriptext_zinc"
                    android:fontFamily="@font/helvetica_neue_light"
                    android:textSize="15sp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/pass_conatiner"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email_conatiner"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:weightSum="6">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:scaleType="fitStart"
                    android:src="@drawable/profile_icon"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.2"
                    android:background="@null"
                    android:textColorHint="@color/grey"
                    android:hint="Gender"
                    android:imeOptions="actionNext"
                    android:gravity="center_vertical"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/descriptext_zinc"
                    android:fontFamily="@font/helvetica_neue_light"
                    android:textSize="15sp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/pass_conatiner"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email_conatiner"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:weightSum="6">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:scaleType="fitStart"
                    android:src="@drawable/countryicon_unselected"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.2"
                    android:background="@null"
                    android:textColorHint="@color/grey"
                    android:hint="Country"
                    android:imeOptions="actionNext"
                    android:gravity="center_vertical"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/descriptext_zinc"
                    android:fontFamily="@font/helvetica_neue_light"
                    android:textSize="15sp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/pass_conatiner"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email_conatiner"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:weightSum="6">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:scaleType="fitStart"
                    android:src="@drawable/user_state"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.2"
                    android:background="@null"
                    android:textColorHint="@color/grey"
                    android:hint="Current Stage"
                    android:imeOptions="actionNext"
                    android:gravity="center_vertical"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/descriptext_zinc"
                    android:fontFamily="@font/helvetica_neue_light"
                    android:textSize="15sp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/pass_conatiner"
                android:background="@color/grey"/>
            <ImageButton
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/regbtn2"
                android:background="@null"
                android:layout_below="@+id/forgetpass"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>