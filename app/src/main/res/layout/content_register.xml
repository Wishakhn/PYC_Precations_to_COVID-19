<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/uploadimage_reg"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:visibility="gone"
                android:src="@drawable/profile_image" />

            <View
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <LinearLayout
                android:id="@+id/name_container"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:weightSum="6">

                <ImageView
                    android:id="@+id/reg_nameicon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:scaleType="fitStart"
                    android:src="@drawable/profile_icon" />

                <EditText
                    android:id="@+id/reg_nameedit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.2"
                    android:background="@null"
                    android:fontFamily="@font/arial"
                    android:hint="Full Name"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textColor="@color/descriptext_zinc"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:id="@+id/reg_nameview"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/email_conatiner"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/errortextname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/arial"
                android:gravity="end"
                android:text="Required **"
                android:textColor="@color/errorcolor"
                android:textSize="10sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/email_conatiner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:weightSum="6">

                <ImageView
                    android:id="@+id/reg_mailicon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:scaleType="fitStart"
                    android:src="@drawable/mail" />

                <EditText
                    android:id="@+id/reg_mailedit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.2"
                    android:background="@null"
                    android:fontFamily="@font/arial"
                    android:hint="example@email,com"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textColor="@color/descriptext_zinc"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:id="@+id/reg_mailview"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/email_conatiner"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/errortextmail1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/arial"
                android:gravity="end"
                android:text="Required **"
                android:textColor="@color/errorcolor"
                android:textSize="10sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/pass_conatiner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email_conatiner"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:weightSum="6">

                <ImageView
                    android:id="@+id/reg_passicon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:scaleType="fitStart"
                    android:src="@drawable/lock" />

                <EditText
                    android:id="@+id/reg_passedit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.2"
                    android:background="@null"
                    android:fontFamily="@font/arial"
                    android:gravity="center_vertical"
                    android:hint="*******"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="@color/descriptext_zinc"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:id="@+id/reg_passview"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/pass_conatiner"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/errortextpass1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/arial"
                android:gravity="end"
                android:text="Required **"
                android:textColor="@color/errorcolor"
                android:textSize="10sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/dob_conatiner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/email_conatiner"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:weightSum="6">

                <ImageView
                    android:id="@+id/reg_dobicon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:scaleType="fitStart"
                    android:src="@drawable/calendar" />

                <EditText
                    android:id="@+id/reg_dobedit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.2"
                    android:background="@null"
                    android:fontFamily="@font/arial"
                    android:gravity="center_vertical"
                    android:hint="DD/MM/YYYY"
                    android:enabled="false"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/descriptext_zinc"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp" />

            </LinearLayout>

            <View
                android:id="@+id/reg_dobview"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/pass_conatiner"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/errortextdob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/arial"
                android:gravity="end"
                android:text="Required **"
                android:textColor="@color/errorcolor"
                android:textSize="10sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/gen_conatiner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_conatiner"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:weightSum="6">

                <include layout="@layout/gender_expandlist_profile" />

            </LinearLayout>

            <View
                android:id="@+id/reg_genderview"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/pass_conatiner"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/errortextgen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/arial"
                android:gravity="end"
                android:text="Required **"
                android:textColor="@color/errorcolor"
                android:textSize="10sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/country_conatiner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_conatiner"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <include layout="@layout/timezone_expandlist_profile" />

            </LinearLayout>

            <View
                android:id="@+id/reg_countryview"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/country_conatiner"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/errortextcountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/arial"
                android:gravity="end"
                android:text="Required **"
                android:textColor="@color/errorcolor"
                android:textSize="10sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/state_conatiner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_conatiner"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:weightSum="6">

                <include layout="@layout/stage_expandlist_profile" />

            </LinearLayout>

            <View
                android:id="@+id/reg_stageview"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/pass_conatiner"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/errortextstage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/arial"
                android:gravity="end"
                android:text="Required **"
                android:textColor="@color/errorcolor"
                android:textSize="10sp"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgetpass"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:background="@null"
                android:elevation="6dp"
                app:cardBackgroundColor="@color/btn_zinc"
                app:cardCornerRadius="3dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/helvetica_neue_light"
                    android:padding="10dp"
                    android:text="REGISTER"
                    android:textColor="@color/titletext_white"
                    android:textSize="18sp" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/logintext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_reg"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/arial"
                android:text="Already have an account? Login."
                android:textColor="#1249FC"
                android:textSize="15sp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>